<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPostActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background_color">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/postInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Fill Post Info"
        android:textColor="@color/title_color"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/DescriptionEdiText"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/outline_background"
        android:hint="Description"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postInfoTextView" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/PostImageEditText"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/outline_background"
        android:hint="Image Url"
        android:layout_marginTop="20dp"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FirstNameInputField" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addButton"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/outline_background"
        android:backgroundTint="@color/title_color"
        android:padding="12dp"
        android:text="Add"
        android:textAllCaps="false"
        android:textSize="19sp"
        android:textColor="@color/background_color" />
  </androidx.appcompat.widget.LinearLayoutCompat>